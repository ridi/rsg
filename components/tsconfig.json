{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "declaration": true,
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "outDir": "dist",
    "declarationDir": "dist",
    "jsx": "react",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "paths": {
      "rsg/*": ["../*"],
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
